<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - sala_de_escape</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/sala_de_escape.styles.css" asp-append-version="true" />
</head>
<body>
    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main> 
    </div>

    <footer class="footer">
        <div class="footer-left">
            &copy; Sala de escape
        </div>
        <div class="footer-right">
            <div class="pista-menu">
                <img src="../Images/General/lupa.png" alt="Pista" class="img-pista">
            </div>
            <div class="boton-menu">
                <button onclick="window.location.href='@Url.Action("Index")'">Volver al menu</button>
            </div>
        </div>
    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    <script src="~/js/general.js"></script>
    
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
